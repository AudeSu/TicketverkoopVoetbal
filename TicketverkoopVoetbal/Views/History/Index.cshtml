@model TicketverkoopVoetbal.ViewModels.HistoryVM

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/tablestyles.css" rel="stylesheet" />

<div class="table">
    <h3>Ticket History</h3>
    @if (Model.TicketVMs.Count() < 1)
    {
        <p>U heeft nog geen ticket(s) gekocht</p>
    }
    else
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Match</th>
                    <th>Datum</th>
                    <th>Startuur</th>
                    <th>Zone</th>
                    <th>Stoeltje</th>
                    <th>Op naam van</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.TicketVMs)
                {
                    <tr>
                        <td>@ticket.MatchID</td> @* TODO *@
                        <td>@ticket.Datum?.ToString("d MMMM yyyy")</td>
                        <td>@ticket.Startuur?.ToString("hh\\:mm")</td>
                        <td>@ticket.ZoneNaam</td>
                        <td>@ticket.StoeltjeID</td>
                        <td>TODO</td> @* TODO *@
                        <td>
                            @if (ticket.Datum != null && ticket.Datum > DateTime.Today.AddDays(7))
                            {
                                <a asp-action="DeleteTicket" asp-route-ticketID="@ticket.TicketID"
                                   onclick="return confirm('Weet u zeker dat u dit ticket wilt annuleren?')">
                                    <img src="~/images/delete-icon.png" alt="Delete" />
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }


    @if (Model.AbonnementVMs.Count() > 0)
    {
        <h3 id="abonnementTitel">Abonnement History</h3>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Club</th>
                    <th>Loopt van</th>
                    <th>tot</th>
                    <th>Zone</th>
                    <th>Stoeltje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var abonnement in Model.AbonnementVMs)
                {
                    <tr>
                        <td>@abonnement.clubNaam</td>
                        <td>TODO</td>
                        <td>TODO</td>
                        <td>@abonnement.ZoneNaam</td>
                        <td>@abonnement.StoeltjeID</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
