@model TicketverkoopVoetbal.ViewModels.HistoryVM

@{
    ViewData["Title"] = "Index";
}

<h2>Ticket History</h2>
@if(Model.TicketVMs.Count() < 1)
{
    <p>Nog geen Tickets gekocht</p>
} else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketVMs.First().MatchID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketVMs.First().ZoneID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketVMs.First().StoeltjeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketVMs.First().GebruikersID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketVMs.First().ZoneNaam)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketVMs.First().TicketID)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TicketVMs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MatchID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoeltjeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GebruikersID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eigenaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneNaam)
                </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketID)
                    </td>
                <td>
                        @Html.ActionLink("DeleteTicket", "DeleteTicket", new { ticketID = item.TicketID })
                </td>
            </tr>
        }
    </tbody>
</table>
}


<h2>Abonnement History</h2>
@if (Model.AbonnementVMs.Count() < 1)
{
    <p>Nog geen abonnementen gekocht</p>
} else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AbonnementVMs.First().GebruikerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketVMs.First().ZoneID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketVMs.First().StoeltjeID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AbonnementVMs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GebruikerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoeltjeId)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { /*  id=item. */  })
                </td>
            </tr>
        }
    </tbody>
</table>
}
