@model IEnumerable<TicketverkoopVoetbal.ViewModels.ClubVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StadionNaam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StadionNaam)
            </td>
            <td>
                    <a asp-controller="PurchaseAbonnement" asp-action="Index" asp-route-id="@item.ClubId">
                        Koop Abonnement
                    </a>

            </td>
             
        </tr>
}
    </tbody>
</table>
