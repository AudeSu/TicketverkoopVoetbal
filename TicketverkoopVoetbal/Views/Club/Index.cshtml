@model IEnumerable<TicketverkoopVoetbal.ViewModels.ClubVM>

@{
    ViewData["Title"] = "Clubs";
}

<style>
    .card-img-top {
        padding-top: 20px;
        max-height: 200px; 
        object-fit: contain;
    }
</style>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var club in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@Url.Content(club.LogoPath)" class="card-img-top" alt="@club.Naam Logo">
                    <div class="card-body">
                        <h5 class="card-title">@club.Naam</h5>
                        <p class="card-text">@club.StadionNaam</p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Index", "PurchaseAbonnement", new { id = club.ClubId })" class="btn btn-primary">Koop Abonnement</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
