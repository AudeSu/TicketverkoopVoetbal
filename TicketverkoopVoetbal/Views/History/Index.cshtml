@model TicketverkoopVoetbal.ViewModels.HistoryVM

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/tablestyles.css" rel="stylesheet" />

<div class="table">
    <h2>Ticket History</h2>
    @if (Model.TicketVMs.Count() < 1)
    {
        <p>Nog geen Tickets gekocht</p>
    }
    else
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Match</th>
                    <th>Zone</th>
                    <th>Seat</th>
                    <th>Gebruiker</th>
                    <th>Eigenaar</th>
                    <th>Ticket ID</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.TicketVMs)
                {
                    <tr>
                        <td>@ticket.MatchID</td>
                        <td>@ticket.ZoneNaam</td>
                        <td>@ticket.StoeltjeID</td>
                        <td>@ticket.GebruikersID</td>
                        <td>@ticket.Eigenaar</td>
                        <td>@ticket.TicketID</td>
                        <td>
                            <a asp-action="DeleteTicket" asp-route-ticketID="@ticket.TicketID">
                                <img src="~/images/delete-icon.png" alt="Delete" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }


    <h2>Abonnement History</h2>
    @if (Model.AbonnementVMs.Count() < 1)
    {
        <p>Nog geen abonnementen gekocht</p>
    }
    else
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Gebruiker</th>
                    <th>Zone</th>
                    <th>Stoeltje</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var abonnement in Model.AbonnementVMs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => abonnement.GebruikerID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => abonnement.ZoneId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => abonnement.StoeltjeId)
                        </td>
                        <td>
                            <a asp-action="DeleteTicket" asp-route-ticketID="@abonnement.GebruikerID">
                                <img src="~/images/delete-icon.png" alt="Delete" />
                            </a>
                            @* @Html.ActionLink("Delete", "Delete", new { /*  id=abonnement. */  }) *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
